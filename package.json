{
  "name": "WECOAPI",
  "version": "1.0.0",
  "description": "The RESTful API for WECO.",
  "main": "server.js",
  "scripts": {
    "build-api": "apidoc -e node_modules/ -o docs/ --private true",
    "deploy:dev": "eb deploy api-dev --profile weco-iam",
    "deploy:production": "eb deploy api-prod --profile weco-iam",
    "deploy:test": "eb deploy api-prod-test --profile weco-iam",
    "lint": "eslint . .js --ignore-pattern node_modules/ --ignore-pattern docs/",
    "precommit": "npm-run-all lint build-api",
    "start": "nodemon --watch",
    "start:dev": "npm-run-all lint build-api start",
    "test": "mocha tests/test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://MSChristensen@bitbucket.org/wecollective/wecoapi.git"
  },
  "author": "WE Collective",
  "license": "ISC",
  "dependencies": {
    "algoliasearch": "^3.24.6",
    "apidoc": "^0.17.6",
    "app-root-path": "^2.0.1",
    "aws-sdk": "^2.4.0",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "4.0.0",
    "express": "^4.13.4",
    "express-bearer-token": "^2.1.0",
    "helmet": "^2.1.1",
    "htmlparser": "^1.7.7",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.13.1",
    "morgan": "^1.9.0",
    "node-gyp": "^3.3.1",
    "nodemon": "^1.14.10",
    "npm-run-all": "^4.1.2",
    "passport": "^0.3.2",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "pluralize": "^7.0.0",
    "sendgrid": "^4.1.0",
    "socket.io": "^1.4.8"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "husky": "^0.14.3",
    "mocha": "^2.5.3",
    "should": "^9.0.2",
    "superagent": "^2.0.0",
    "supertest": "^1.2.0",
    "supertest-session": "^2.0.1"
  },
  "apidoc": {
    "name": "WECO API",
    "title": "WECO API Docs",
    "description": "Documentation for the WE Collective RESTful API.",
